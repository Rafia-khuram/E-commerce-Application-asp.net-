@using ShoppingApplication.BOL
@model User
@{
    ViewBag.Title = "Registeration";
}

<h2 class="text-center">Register Youself Now!</h2>

<div class="container m-top">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Register</h2>
            <div class="panel-body">
                @using (Html.BeginForm("Registeration", "Account", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-user"></span>
                            </span>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User's Name", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-envelope"></span>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "User's Email", type = "email", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-phone"></span>
                            </span>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "User's PhoneNumber", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-user-tag"></span>
                            </span>
                            @{
                                List<Role> Roles = ViewBag.Roles as List<Role>;
                            }
                            <select name="RoleId" class="form-control">
                                <option selected="selected" disabled>-Select Role-</option>
                                @foreach (var item in Roles)
                                {
                                    if (!(item.Name.Equals("Admin")))
                                    {
                                    <option value="@item.Id">@item.Name</option>}
                                }
                            </select>


                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-lock"></span>
                            </span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "User's Password", required = "required" })
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-black">Register</button>
                    </div>
                }
            </div>
        </div>

    </div>
</div>