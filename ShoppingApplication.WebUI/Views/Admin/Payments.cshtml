@using ShoppingApplication.BOL
@model List<Payment>
@{
    ViewBag.Title = "Payments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/StyleSheet.css" rel="stylesheet" />
<div class="container">
    <h2>Payments</h2>

    <div class="panel panel-primary">
        <div class="panel-heading">
            <a class="panel-link" href="/Admin/AddPayment">Add Payment</a>
        </div>
        <div class="panel-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Payment Id</th>
                        <th>Submitted On</th>
                        <th>Ordered Product</th>
                        <th>Payment Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.SubmittedOn</td>
                            <td>@item.Order.Product.Name</td>
                            <td>@item.PaymentStatus.Name</td>


                            <td>
                                <a href="#"> <span class="glyphicon glyphicon-search text-primary"></span></a>
                                <a href="/Admin/EditPayment/@item.Id"> <span class="glyphicon glyphicon-edit text-info"></span></a>
                                <a href="/Admin/DeletePayment/@item.Id"> <span class="glyphicon glyphicon-remove text-danger"></span></a>


                            </td>
                        </tr>
                    }
                </tbody>


            </table>
</div>
</div>
</div>