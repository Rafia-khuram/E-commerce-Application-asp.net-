@using ShoppingApplication.BOL
@model Payment
@{
    ViewBag.Title = "EditPayment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container m-top">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Edit Payment</h2>
            <div class="panel-body">
                @using (Html.BeginForm("EditPayment", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-user"></span>
                            </span>
                            @{
                                List<Order> Orders = ViewBag.Orders as List<Order>;
                            }
                            <input type="hidden" id="SelectedOrder" value="@Model.OrderId" />
                            <select name="OrderId" class="form-control">
                                @foreach (var item in Orders)
                                {
                                    <option value="@item.Id">@item.Product.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-check"></span>
                            </span>
                            @{
                                List<PaymentStatus> PaymentStatuses = ViewBag.PaymentStatuses as List<PaymentStatus>;
                            }
                            <input type="hidden" id="SelectedPaymentStatus" value="@Model.PaymentStatusId" />
                            <select name="PaymentStatusId" class="form-control">
                                @foreach (var item in PaymentStatuses)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="text-center" style="margin-top:5px">
                        <button type="submit" class="btn btn-black">Edit Payment</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#PaymentStatusId").val($("#SelectedPaymentStatus").val());
        $("#OrderId").val($("#SelectedOrder").val());
    </script>

}