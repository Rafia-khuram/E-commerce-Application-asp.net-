@using ShoppingApplication.BOL
@model City
@{
    ViewBag.Title = "AddCity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Add New City</h2>
            <div class="panel-body">
                @using (Html.BeginForm("AddCity", "Admin", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-city"></span>
                            </span>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "City Name", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group form-inline">
                            <span class="input-group-addon">
                                <span class="fa fa-user-tag"></span>
                            </span>
                            @{
                                List<Country> Countries = ViewBag.Countries as List<Country>;
                            }
                            <select name="CountryId" class="form-control">
                                <option selected="selected" disabled>-Select Country-</option>
                                @foreach (var item in Countries)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-black" type="submit">Add City</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
