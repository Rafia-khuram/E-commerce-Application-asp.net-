@using ShoppingApplication.BOL
@model List<Address>
@{
    ViewBag.Title = "Addresses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/StyleSheet.css" rel="stylesheet" />
<div class="container">
    <h2>Addresses</h2>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <a class="panel-link" href=#>Add Address</a>
        </div>
        <div class="panel-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Complete Address</th>
                        <th>User Name</th>
                        <th>City Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CompleteAddress</td>
                            <td>@item.User.UserName</td>
                            <td>@item.City.Name</td>


                            <td>
                                <a href="#"> <span class="glyphicon glyphicon-search text-primary"></span></a>
                                <a href="#"> <span class="glyphicon glyphicon-edit text-info"></span></a>
                                <a href="#"> <span class="glyphicon glyphicon-remove text-danger"></span></a>


                            </td>
                        </tr>
                    }
                </tbody>


            </table>

</div>
</div>
</div>