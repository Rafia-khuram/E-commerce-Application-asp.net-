
@{
    ViewBag.Title = "ContactUs";
}

<div class="container m-top bg-info">
    <div class="col-lg-4 col-lg-push-4 col-md-4 col-md-push-4">
        <div class="panel panel-default">
            <h2 class="text-center">Contact Us</h2>
            <div class="panel-body ">
                <div class="form-group">
                    <div class="input-group form-inline">
                        <span class="input-group-addon">
                            <span class="fa fa-user"></span>
                        </span>

                        <input type="text" id="name" placeholder="Enter your name"><br>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group form-inline">
                        <span class="input-group-addon">
                            <span class="fa fa-envelope"></span>
                        </span>

                        <input type="email" id="email" name="email" placeholder="Enter your email"><br>

                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group form-inline">
                        <span class="input-group-addon">
                            <span class="fa fa-phone"></span>
                        </span>


                        <input type="tel" id="phone" name="phoneNumber" placeholder="Enter your phone number"><br>

                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group form-inline">
                        <span class="input-group-addon">
                            <span class="fa fa-envelope"></span>
                        </span>

                        <input type="text" id="YourMessage" name="yourMessage" placeholder="Your Message"><br>
                    </div>
                </div>

                <div class="text-center">
                    <button class="btn btn-danger " type="submit">Submit</button>
                </div>
            </div>
        </div>

    </div>
</div>
